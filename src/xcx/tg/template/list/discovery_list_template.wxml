<template name="discovery_list_template">
  <view class="weui-media-box weui-media-box_appmsg" bindtap="discoverTap" data-id="{{id}}">
    <view class="weui-media-box__hd">
      <image src="{{'http://www.fanhantech.com'+cover ||'/images/default.jpg'}}" mode="widthFix" class="weui-media-box__thumb"></image>
    </view>
    <view class="weui-media-box__bd">
      <view class="weui-media-box__title">No.{{id}}{{name}}</view>
      <view class="weui-media-box__desc">类型：{{typeStr}} | 周期：{{duration}}天</view>
      <!-- <view class="weui-media-box__desc"><em>{{price}}</em>元/任务</view> -->
      <view class="weui-media-box__info">
        <text class="weui-media-box__info__meta">一个月前发布 |  233人标注中</text>
        <!-- <text class="weui-media-box__info__meta weui-media-box__info__meta_extra">
                    233人标注中
                </text> -->
      </view>
    </view>
    <view class="weui-media-box__desc color_primary text-right">{{statusStr}}</view>
  </view>
</template>