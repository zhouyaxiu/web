.page-body-time {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.time-big {
  font-size: 60rpx;
  margin: 20rpx;
}

.time-small {
  font-size: 30rpx;
}

.page-body-buttons {
  margin-top: 60rpx;
  display: flex;
  justify-content: space-around;
}

.button-stop-record {
  width: 110rpx;
  height: 110rpx;
  border: 20rpx solid #fff;
  background-color: #f55c23;
  -webkit-border-radius: 130rpx;
  -moz-border-radius: 130rpx;
  -ms-border-radius: 130rpx;
  -o-border-radius: 130rpx;
  border-radius: 130rpx;
  margin: 0 auto;
}

.page-body {
  width: 100%;
  flex-grow: 1;
  overflow-x: hidden;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  -ms-box-sizing: border-box;
  -o-box-sizing: border-box;
  box-sizing: border-box;
}

.page-body-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
  width: 100%;
  padding: 50rpx 0 150rpx 0;
}

.weui-textarea {
  min-height: 200rpx;
  word-break: break-all;
  word-wrap: break-word;
}

.page-body-info {
  padding: 0;
  height: 100%;
  padding-left: 20rpx;
  background-color: #fff;
  width: 100%;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  -ms-box-sizing: border-box;
  -o-box-sizing: border-box;
  box-sizing: border-box;
}

.weui-uploader__input-box {
  margin-bottom: 0;
}

.image-plus-nb {
  border: 0;
}

.image-plus {
  width: 100%;
  height: 100%;
  position: relative;
  display: block;
}

.image-plus-horizontal {
  position: absolute;
  top: 50%;
  left: 50%;
  background-color: #d9d9d9;
  width: 4rpx;
  height: 80rpx;
  transform: translate(-50%, -50%);
}

.image-plus-vertical {
  position: absolute;
  top: 50%;
  left: 50%;
  background-color: #d9d9d9;
  width: 80rpx;
  height: 4rpx;
  transform: translate(-50%, -50%);
}

.upload_img {
  padding: 40rpx;
}

.upload_img text {
  font-size: 26rpx;
  display: block;
  margin-bottom: 20rpx;
  padding: 20rpx 0 0 0;
  color: #999;
}

.weui-uploader__input-box {
  position: relative;
  float: left;
  margin-right: 2%;
  margin-bottom: 20rpx;
  width: 48%;
  height: 250rpx;
  border: 2rpx solid #d9d9d9;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  -ms-box-sizing: border-box;
  -o-box-sizing: border-box;
  box-sizing: border-box;
}

.weui-uploader__img {
  width: 100%;
  height: 100%;
  display: block;
  z-index: 10;
  position: absolute;
  top: 0;
}

.photo-item {
  position: absolute;
  top: 0;
  z-index: 1000;
  right: 0;
  margin: auto;
  width: 100%;
  height: 100%;
  bottom: 0;
}

.photo-item icon {
  right: 0;
  position: absolute;
  z-index: 100;
}

.upload_img .weui-cell__bd {
  width: 100%;
}

.upload_img .weui-upl {
  position: relative;
}

.exam {
  position: absolute;
  top: 0;
  left: 0;
  font-size: 24rpx;
  z-index: 1;
  color: #fff;
  background: red;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
}

.container {
  padding-bottom: 50px;
  overflow-x: hidden;
}

.footer {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 98rpx;
  line-height: 98rpx;
  background: #fff;
  border-top: 2rpx solid #f0f0f0;
  background: #fff;
  z-index: 100;
  clear: both;
  padding: 0 40rpx;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  -ms-box-sizing: border-box;
  -o-box-sizing: border-box;
  box-sizing: border-box;
  text-align: center;
  font-size: 0;
  left: 0;
  right: 0;
  z-index: 100;
}

.footer .foot-classfy {
  height: 98rpx;
  line-height: 98rpx;
  padding: 19rpx 0;
}

.footer .foot-classfy-3 {
  width: 31%;
  display: inline-block;
  height: 98rpx;
  line-height: 98rpx;
}

.footer .tem-step {
  margin: 0 3%;
}

.footer .tem-step button {
  border: 1px solid red;
  color: red;
}

.footer button {
  font-size: 24rpx;
  -webkit-border-radius: 10rpx;
  -moz-border-radius: 10rpx;
  -ms-border-radius: 10rpx;
  -o-border-radius: 10rpx;
  border-radius: 10rpx;
  height: 60rpx;
  line-height: 60rpx;
}

.footer .sub-step button {
  background: red;
  color: #fff;
}

.weui-cells__title {
  font-size: 30rpx;
  color: #666;
  padding-left: 40rpx;
}

.place {
  font-size: 26rpx;
  color: #999;
}

.text_task {
  padding: 40rpx;
}

.task_title {
  padding-bottom: 20rpx;
  font-size: 36rpx;
  color: #333;
}

.task_info {
  font-size: 26rpx;
  color: #999;
}

.text-index {
  position: absolute;
  left: 60rpx;
  font-size: 30rpx;
}

.text_task_con {
  background: #fff;
  margin-bottom: 20rpx;
  padding: 20rpx;
  -webkit-border-radius: 8rpx;
  -moz-border-radius: 8rpx;
  -ms-border-radius: 8rpx;
  -o-border-radius: 8rpx;
  border-radius: 8rpx;
  box-shadow: 0 0 2px 1px #f0f0f0;
}

.text_task_con .weui-cell_input {
  background: #f8f8f8;
  margin-bottom: 50rpx;
  padding: 10rpx 20rpx;
  margin: 10px;
}

.text_task_con .page-section:first-child {
  margin-bottom: 50rpx;
}
