.weui-article {
  padding: 0rpx 30rpx 120rpx;
  font-size: 30rpx;
}

.weui-article .weui-media-box {
  padding: 30rpx 0;
}

.weui-media-box__bd {
  position: relative;
}

.color_primary {
  position: absolute;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto;
  display: block;
  height: 20px;
  line-height: 20px;
}

.weui-article_name {
  font-size: 32rpx;
  font-weight: 400;
  margin-bottom: 20rpx;
}

.weui-article_con {
  font-weight: 400;
  font-size: 30rpx;
  margin-bottom: 20rpx;
  color: #999;
}

.weui-article_con text {
  display: block;
  margin-bottom: 10rpx;
}

.foot {
  position: fixed;
  bottom: 20rpx;
  width: 80%;
  left: 10%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
}

.foot text {
  width: 100%;
  -webkit-border-radius: 40rpx;
  -moz-border-radius: 40rpx;
  -ms-border-radius: 40rpx;
  -o-border-radius: 40rpx;
  border-radius: 40rpx;
  background: #15b3e4;
  color: #fff;
  font-size: 34rpx;
  margin: 0 auto;
  display: inline-block;
}

.weui-media-box__title {
  margin-bottom: 20rpx;
}

.task_info {
  margin-top: 40rpx;
  word-break: break-all;
}

.page__bd text{
  padding: 20rpx;
  display: inline-block
}