@import '../../template/wxss/photo_task.wxss';
@import '../../template/wxss/text_task.wxss';
.bg {
    background: #fff;
}

page {
    background: #f8f8f8;
}

.speak-main image {
    width: 136rpx;
    height: 136rpx;
    vertical-align: middle;
}

.disabled {
    color: #dedede;
    height: 120rpx;
    width: 120rpx;
    display: inline-block;
    text-align: center;
    line-height: 120rpx;
    margin-right: 40rpx;
}

.num {
    text-align: right;
    padding-right: 40rpx;
    padding-top: 40rpx;
    font-size: 30rpx;
    color: #999;
}

.num em {
    font-size: 40rpx;
    color: #333;
}

.active {
    color: red;
    height: 120rpx;
    width: 120rpx;
    display: inline-block;
    text-align: center;
    line-height: 120rpx;
    margin-right: 40rpx;
}

.opacity {
    opacity: 0.4;
}

.playstatus {
    display: inline-block;
    background: transparent !important;
    border: 0 !important;
    /* width: 150rpx; */
    /* height: 110rpx;
    line-height: 110rpx; */
    text-align: center;
    box-shadow: 0 0 0 #fff !important;
    background-color: #fff !important;
    vertical-align: middle;
    padding: 0 !important;
    font-size: 36rpx;
}

.playstatus:after {
    display: none;
}

.speak-main{
    display:flex;
    align-content:center;
    align-items:center;
}

.time {
    margin-bottom: 120rpx;
    font-size: 60rpx;
    color: red;
}

.time text {
    font-size: 60rpx;
    color: #333;
}

.radio-main {
    text-align: center;
    /* position: absolute;
    left: 0;
    right: 0;
    bottom: 200rpx; */
}

.text_task {
    position: absolute;
    top: 120rpx;
    bottom: 180rpx;
    left: 40rpx;
    right: 40rpx;
    background: #fff;
    border-radius: 20rpx;
    padding: 40rpx;
}

.text_task_con {
    position: absolute;
    left: 0;
    right: 0;
    bottom: 50rpx;
}

.nextDisabled {
    color: #999 !important;
}

.task_info {
    font-size: 32rpx;
    line-height: 60rpx;
}

.foot {
    /* position: absolute;
    bottom: 40rpx;
    width: 90%; */
    margin-top: 40rpx;
}

.next {
    display: flex;
    position: absolute;
    bottom: 40rpx;
    left: 20px;
    right: 20px;
    font-size: 30rpx;
    color: #999;
}

.next view {
    flex: 1
}

.next view:last-child {
    text-align: right;
}
.progress{
    position: absolute;
    left:0;
    right: 0;
    bottom: 0;
    top:0;
}