@import '../../template/wxss/photo_task.wxss';
@import '../../template/wxss/text_task.wxss';

.page-body-wrapper {
  justify-content: space-between;
  flex-grow: 1;
  margin-bottom: 300rpx;
}

.page-body-time {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.container {
  padding: 20rpx 40rpx;
}

.speak-main image {
  width: 136rpx;
  height: 136rpx;
  vertical-align: middle;
  margin-right: 40rpx;
}

.disabled {
  color: #dedede;
  height: 120rpx;
  width: 120rpx;
  display: inline-block;
  text-align: center;
  line-height: 120rpx;
  margin-right: 40rpx;
}

.active {
  color: red;
  height: 120rpx;
  width: 120rpx;
  display: inline-block;
  text-align: center;
  line-height: 120rpx;
  margin-right: 40rpx;
}

.opacity {
  opacity: 0.4;
}

.cancas {
  width: 100%;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  -ms-box-sizing: border-box;
  box-sizing: border-box;
  box-sizing: border-box;
}

.playstatus {
  display: inline-block;
  background: transparent !important;
  border: 0 !important;
  width: 150rpx;
  height: 110rpx;
  line-height: 110rpx;
  text-align: center;
  box-shadow: 0 0 0 #fff !important;
  background-color: #fff !important;
  vertical-align: middle;
  padding: 0 !important;
  font-size: 36rpx;
  text-align: left;
}

.playstatus:after {
  display: none;
}

.playstatus image {
  width: 110rpx;
  height: 110rpx;
}

.time {
  margin-bottom: 120rpx;
  font-size: 60rpx;
  color: red;
}

.time text {
  font-size: 60rpx;
  color: #333;
}

.radio-main {
  text-align: center;
  position: absolute;
  left: 0;
  right: 0;
  bottom: 200rpx;
}

.text_task_con {
  box-shadow: 0 0 0 #fff;
}

.nextDisabled {
  background: #dedede !important;
  color: #333 !important;
  width: 100% !important;
}

.nextActive {
  width: 100% !important;
}

.task_info {
  font-size: 32rpx;
  line-height: 60rpx;
}

.foot {
  position: absolute;
  bottom: 40rpx;
  width: 90%;
}
