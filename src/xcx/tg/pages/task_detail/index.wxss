@import '../../template/wxss/task_detail.wxss';
.active {
    background: #15b3e4;
    color:#fff;
}
.noactive{
    opacity:0.6;
}
.weui-media-box__hd {
    background: #ff7d3d;
    box-sizing: border-box;
    border-radius: 10rpx;
    padding: 20rpx;
}

.weui-media-box__thumb {
    width: 60rpx;
    height: 60rpx;
    background-size: 62rpx 60rpx;
    display: inline-block;
    background-image: url('data:image/png;base64,')
}
.weui-article {
    padding-bottom: 150rpx;
}
.foot{
    bottom: 0;
    display: flex;
    width:100%;
    left:0;
    height: 100rpx;
    line-height: 100rpx;
    align-items:center;
    justify-content: center;
}
.foot view{
    font-size:34rpx;
    color:#fff;
}
.foot view:first-child{
    background:#15b3e4;
    white-space:nowrap;
    flex:1;
}
.foot view:last-child{
    background:#ff7d3d;
    flex: 1;
}