@import '../camera2/index.wxss';
.radio1 {
    padding: 20rpx 40rpx;
    font-size: 30rpx;
}

.radio1 label {
    margin-right: 20rpx;
}

.weui-label {
    font-size: 28rpx;
    color: #666;
}

.title {
    padding: 16rpx 40rpx;
    background: #f8f8f8;
    color: #5e6d82;
    font-size: 34rpx;
}

radio .wx-radio-input {
    width: 50rpx;
    height: 50rpx;
    overflow: hidden;
}
.active {
    background: #7abdff !important;
    color: #fff;
    border: 2rpx solid #7abdff;
}
.checkbox {
    width: 32%;
    display: inline-block;
    background: #fff;
    padding: 20rpx 40rpx;
    color: #333;
    position: relative;
    text-align: center;
    border: 2rpx solid #f8f8f8;
    font-size: 28rpx;
    border-radius: 10rpx;
}
checkbox-group {
    display: flex;
    width: 100%;
}

checkbox-group .weui-cell:before {
    border: 0 !important;
    position: absolute
}
 .checkbox checkbox {
    opacity: 0;
    position: absolute;
}

.checkbox:nth-child(2) {
    margin: 0 2%;
}

.checkbox label {
    margin-right: 20rpx;
}

.speak-main {
    text-align: center;
    padding-top: 60rpx;
}

.uploadvideo {
    margin: 80rpx auto 0;
    text-align: center;
    width: 200px;
    padding: 20rpx 0;
    border-radius: 20px;
    background: #44B549;
    color: #fff;
}

.videoBtn {
    margin-top: 100rpx;
    text-align: center;
}

.videoBtn image {
    width: 160rpx;
    height: 160rpx;
}

.video-item {
    position: absolute;
    bottom: 260rpx;
    width: 100%;
    left: 0;
    right: 0;
}
.weui-media-box{
    border:0;
}
.weui-media-box__title{
    margin-bottom: 10rpx;
}
.fr{
    width: 80rpx;
    height: 80rpx;
    background-size: 80rpx 80rpx;
    background-image: url('data:image/png;base64,')
}
.playtime{
    color:#44B549
}
.radio{
    width:40%
}