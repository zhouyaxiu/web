page {
  height: 100%;
}

.weui-panel {
  border-bottom: 1px solid #f0f0f0;
}

.navbar {
  display: flex;
  background: #f8f8f8;
  height: 80rpx;
  font-size: 32rpx;
  position: fixed;
  top: 0;
  width: 100%;
  z-index: 100;
}

.navbar .select {
  position: relative;
  flex: auto;
  text-align: center;
  height: 80rpx;
  line-height: 30rpx;
}

.navbar .select.active {
  color: #15b3e4;
}

.navbar .select.active:after {
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 20%;
  right: 20%;
  height: 4rpx;
  background: #15b3e4;
}

.recommend .swiper {
  height: 300rpx;
}

.recommend .swiper .img {
  width: 100%;
  height: 100%;
}

.wx-swiper-dot::before {
  color: #fff;
}

.wx-swiper-dot-active::before {
  color: green;
}

.logo {
  width: 100%;
}

.list-container {
  background: #fff;
  font-size: 0;
}

.foot {
  position: fixed;
  bottom: 10px;
  width: 100%;
  height: 40px;
  line-height: 40px;
  text-align: center;
}

.foot text {
  width: 90%;
  -webkit-border-radius: 20px;
  -moz-border-radius: 20px;
  -ms-border-radius: 20px;
  -o-border-radius: 20px;
  border-radius: 20px;
  background: #2b2020;
  color: #fff;
  font-size: 34rpx;
  margin: 0 auto;
  display: inline-block;
}

.item {
  height: 40rpx;
  width: 55rpx;
  margin: 10rpx;
  line-height: 28rpx;
  font-size: 28rpx;
  font-family: Microsoft YaHei;
  display: inline-block;
  white-space: nowrap;
  color: black;
  font-weight: bold;
}

.clearfix:after {
  content: "";
  display: block;
  clear: both;
  height: 0;
}

.clearfix {
  zoom: 1;
}
